<div>Tile: {{model.revealing}}</div>

<div style='position: relative; width: 500px;'>
  <button
    style='position: absolute;
      top: 10px;
      left: calc(50% - 25px);
      width: 50px; height: 50px;
      border-radius: 999px;
      background-color: green;
      color: white;'
  >
    G1b
  </button>
  <img src="/scenario-tiles/1/L1a.jpg" width=500>
</div>

<div>You'll need</div>
<div>{{countPerStandeeType.elite}} elite standee(s)</div>
<div>{{countPerStandeeType.normal}} normal standee(s)</div>

<div>Monsters</div>

<div>
  {{#each monsterStandees as |monsterStandee|}}
    <div>{{monsterStandee.type}}</div>
    {{#if monsterStandee.elite.length}}
      <div>Elite ({{monsterStandee.elite.length}}):</div>
      {{#each monsterStandee.elite as |elite|}}
        {{elite.standee}}
      {{/each}}
    {{/if}}
    {{#if monsterStandee.normal.length}}
      <div>Normal ({{monsterStandee.normal.length}}):</div>
      {{#each monsterStandee.normal as |normal|}}
        {{normal.standee}}
      {{/each}}
    {{/if}}
  {{/each}}
</div>

{{#if monsterActions}}
  <div>New monster actions</div>
  {{#each monsterActions as |monsterAction|}}
    <div>{{monsterAction.type}} - {{monsterAction.initiative}}</div>
    {{#if monsterAction.elite.length}}
      <div>Elite:</div>
      {{#each monsterAction.elite as |eliteAction|}}
        {{#if eliteAction.value}}
          <div>{{eliteAction.key}}: {{eliteAction.value}}</div>
        {{else}}
          <div>{{eliteAction.key}}</div>
        {{/if}}
      {{/each}}
    {{/if}}
    {{#if monsterAction.normal.length}}
      <div>Normal:</div>
      {{#each monsterAction.normal as |normalAction|}}
        {{#if normalAction.value}}
          <div>{{normalAction.key}}: {{normalAction.value}}</div>
        {{else}}
          <div>{{normalAction.key}}</div>
        {{/if}}
      {{/each}}
    {{/if}}
  {{/each}}
{{/if}}

<button {{action (action 'nextStage')}}>
  Done
</button>